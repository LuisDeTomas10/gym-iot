<link rel="stylesheet" href="/modules/app/reports/reports.css">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container mt-4">
    <h1 class="text-center display-4 mb-5">Reportes de Actividad</h1>

    <!-- Resumen General -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <h2 class="card-title border-bottom pb-2 mb-4"><i class="fas fa-chart-line"></i> Resumen General</h2>
            <div class="row text-center">
                <div class="col-sm-3 mb-3">
                    <div class="p-3 bg-primary text-white rounded shadow-sm">
                        <i class="fas fa-redo fa-2x mb-2"></i>
                        <p>Total Repeticiones</p>
                        <p class="h3">1,234</p>
                    </div>
                </div>
                <div class="col-sm-3 mb-3">
                    <div class="p-3 bg-success text-white rounded shadow-sm">
                        <i class="fas fa-fire fa-2x mb-2"></i>
                        <p>Calorías Quemadas</p>
                        <p class="h3">5,678 kcal</p>
                    </div>
                </div>
                <div class="col-sm-3 mb-3">
                    <div class="p-3 bg-warning text-white rounded shadow-sm">
                        <i class="fas fa-clock fa-2x mb-2"></i>
                        <p>Tiempo Total</p>
                        <p class="h3">12h 34m</p>
                    </div>
                </div>
                <div class="col-sm-3 mb-3">
                    <div class="p-3 bg-danger text-white rounded shadow-sm">
                        <i class="fas fa-dumbbell fa-2x mb-2"></i>
                        <p>Sesiones Completadas</p>
                        <p class="h3">28</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Objetivos del Mes -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <h2 class="card-title border-bottom pb-2 mb-4"><i class="fas fa-bullseye"></i> Objetivos del Mes</h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5>Calorías</h5>
                    <div class="progress mb-2">
                        <div class="progress-bar bg-primary" role="progressbar" style="width: 70%" aria-valuenow="70"
                            aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <p class="text-right">7,000 / 10,000 kcal</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h5>Sesiones</h5>
                    <div class="progress mb-2">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 60%" aria-valuenow="60"
                            aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <p class="text-right">12 / 20 sesiones</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h5>Tiempo Activo</h5>
                    <div class="progress mb-2">
                        <div class="progress-bar bg-warning" role="progressbar" style="width: 80%" aria-valuenow="80"
                            aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <p class="text-right">16h / 20h</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <h2 class="card-title border-bottom pb-2 mb-4"><i class="fas fa-chart-line"></i> Progreso Semanal</h2>
            <canvas id="progresoSemanal"></canvas>
        </div>
    </div>
</div>




<script>
    var ctx = document.getElementById('progresoSemanal').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado', 'Domingo'],
            datasets: [{
                label: 'Calorías Quemadas',
                data: [300, 450, 200, 500, 350, 600, 250],
                borderColor: '#3498db',
                backgroundColor: 'rgba(52, 152, 219, 0.2)',
                tension: 0.1,
                fill: true
            }, {
                label: 'Tiempo de Actividad (minutos)',
                data: [45, 60, 30, 75, 50, 90, 40],
                borderColor: '#2ecc71',
                backgroundColor: 'rgba(46, 204, 113, 0.2)',
                tension: 0.1,
                fill: true
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                title: {
                    display: true,
                    text: 'Progreso Semanal'
                }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>