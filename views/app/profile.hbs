        type: 'line',
        data: {
            labels: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun'],
            datasets: [{
                label: 'Peso (kg)',
                data: [90, 88, 87, 86, 85, 84],
                borderColor: 'rgb(75, 192, 192)',
